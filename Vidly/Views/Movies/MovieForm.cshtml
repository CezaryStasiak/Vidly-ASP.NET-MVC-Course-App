@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movie Add/Edit</h2>
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Movie.Name)
        @Html.TextBoxFor(model => model.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Movie.MovieGenreId)
        @Html.DropDownListFor(model => model.Movie.MovieGenreId, new SelectList(Model.MovieGenres, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Movie.ReleasedDate)
        @Html.TextBoxFor(model => model.Movie.ReleasedDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Movie.InStock)
        @Html.TextBoxFor(model => model.Movie.InStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(model => model.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

