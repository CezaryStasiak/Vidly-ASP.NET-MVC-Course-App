@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre :@Model.Genre.Name</li>
    <li>Released Date :@Model.ReleasedDate</li>
    <li>Added Date :@Model.DateAdded</li>
    <li>In Stock :@Model.InStock</li>
</ul>

