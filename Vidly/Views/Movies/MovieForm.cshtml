@model Vidly.Models.Movie
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (@Html.BeginForm("Save", "MoviesController"))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name);
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Genre);
        @Html.TextBoxFor(model => model.Genre, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ReleasedDate);
        @Html.TextBoxFor(model => model.ReleasedDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.InStock);
        @Html.TextBoxFor(model => model.InStock, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

